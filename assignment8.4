package com.example.mypackage;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
 
public class ThirtyfirstAssign
{
    public static void main(String[] args)
    {	
    	FileInputStream instr = null;
	FileOutputStream outstr = null;
 
    	try
      {
    	    File infile =new File("C:\\Users\\elam\\Desktop\\nn1.txt");
    	    File outfile =new File("C:\\Users\\elam\\Desktop\\nn2.txt");
 
    	    instr = new FileInputStream(infile);
    	    outstr = new FileOutputStream(outfile);
 
    	    byte[] buffer = new byte[1024];
 
    	    int length;
    	    /*copying the contents from input stream to
    	     * output stream using read and write methods
    	     */
    	    while ((length = instr.read(buffer)) > 0){
    	    	outstr.write(buffer, 0, length);
    	    }

    	    //Closing the input/output file streams
    	    instr.close();
    	    outstr.close();

    	    System.out.println("File copied successfully!!");
 
    	}
      catch(IOException ioe)
      {
    		ioe.printStackTrace();
    	 }
    }
}
